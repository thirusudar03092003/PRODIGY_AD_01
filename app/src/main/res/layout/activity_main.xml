<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1F2937"
    android:padding="16dp">

    <!-- Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#374151"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/expressionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#9CA3AF"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp"
            android:minHeight="30dp"/>

        <TextView
            android:id="@+id/resultTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:fontFamily="monospace"
            android:text="@string/_0"/>
    </LinearLayout>

    <!-- Buttons Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_margin="4dp"
            android:text="AC"
            android:textSize="24sp"
            android:backgroundTint="#EF4444"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#F59E0B"
            android:text="รท"
            android:textSize="24sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#F59E0B"
            android:text="ร"
            android:textSize="24sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="7"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="8"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="9"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#F59E0B"
            android:text="-"
            android:textSize="24sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="4"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="5"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="6"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#F59E0B"
            android:text="+"
            android:textSize="24sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="1"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="2"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="3"
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#10B981"
            android:text="="
            android:textSize="24sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="4dp"
            android:backgroundTint="#4B5563"
            android:text="0"
            android:textSize="24sp"
            tools:ignore="HardcodedText,DuplicateSpeakableTextCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:text="."
            android:textSize="24sp"
            android:backgroundTint="#4B5563"
            tools:ignore="HardcodedText" />

    </GridLayout>
</LinearLayout>